# ========================================
# StrataLens AI - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# OpenAI API Key (required for embeddings and LLM features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# API Ninjas Key (required for earnings transcripts)
API_NINJAS_KEY=your-api-ninjas-key-here

# Cerebras API Key (optional - for fast inference)
CEREBRAS_API_KEY=your-cerebras-api-key-here

# Which LLM to use: openai | cerebras | auto (default: cerebras; auto = Cerebras if CEREBRAS_API_KEY set, else OpenAI)
# RAG_LLM_PROVIDER=cerebras
# Max completion tokens for OpenAI (lower = faster; default 8000)
# RAG_OPENAI_MAX_TOKENS=8000

# Tavily API Key (optional - for web search)
TAVILY_API_KEY=your-tavily-api-key-here

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string for embeddings and processed data
DATABASE_URL=postgresql://username:password@localhost:5432/stratalens

# ========================================
# Application Settings
# ========================================
# Environment: 'development' for local, 'production' for deployed
ENVIRONMENT=development

# Server configuration
PORT=8000
HOST=0.0.0.0
BASE_URL=http://localhost:8000

# ========================================
# Clerk Authentication (Primary)
# ========================================
# Get these from your Clerk Dashboard: https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret
# Frontend (Vite requires VITE_ prefix to expose vars to browser)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# ========================================
# Legacy Authentication (Deprecated)
# ========================================
# These are kept for backward compatibility during migration
# Will be removed after full Clerk migration
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# ========================================
# Feature Flags
# ========================================
# Note: ENABLE_LOGIN and ENABLE_SELF_SERVE_REGISTRATION are now
# handled by Clerk. These flags are deprecated.
ENABLE_REGULAR_AUTH=true
ENABLE_PREMIUM_ONBOARDING=false

# Auth bypass (currently defaults to true - auth is disabled)
# Set to false to re-enable Clerk authentication
AUTH_DISABLED=true

# ========================================
# Data Paths (optional - defaults to ./data/)
# ========================================
# DATA_DIR=./data
# TRANSCRIPTS_DIR=./data/transcripts
# EMBEDDINGS_DIR=./data/embeddings
# 10K_FILINGS_DIR=./data/10k_filings
# DUCKDB_PATH=./data/duckdb/financial_data_new.duckdb

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO

# ========================================
# External Services (optional)
# ========================================
# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379

# Logfire for observability (optional)
# LOGFIRE_TOKEN=your-logfire-token-here
